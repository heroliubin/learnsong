<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.collect.CollectFragment">

    <TextView
        android:id="@+id/collect_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/customactionbar_height"
        android:gravity="center"
        android:text="@string/title_collect"
        android:textColor="@color/title_black"
        android:textSize="@dimen/customactionbar_titlesize"
        android:textStyle="bold"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/home_divide"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/title_divide"
        app:layout_constraintTop_toBottomOf="@+id/collect_title" />


</androidx.constraintlayout.widget.ConstraintLayout>